<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds!</h3>
		</div>
	</div>

	<div class="row">
		<% campgrounds.forEach(function(element){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<div class="image-thumb" style="background-image: url(<%= element.image %>);"></div>
					
					<div class="caption text-center">
						<h4><%= element.name %></h4>
						<p>
							<a class="btn btn-primary" href="/campgrounds/<%= element._id %>">More Info</a>
						</p>
					</div>	
				</div>
			</div>
		<% }) %>	
	</div>
</div>	



<% include ../partials/footer %>
